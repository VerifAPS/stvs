<?xml version="1.0" standalone="no"?>

<session xmlns="http://formal.iti.kit.edu/stvs/logic/io/xml"
         xmlns:ns2="http://formal.iti.kit.edu/exteta-1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://formal.iti.kit.edu/stvs/logic/io/xml session.xsd">
 <code>
   <plaintext>I am some ST code!</plaintext>
 </code>
 <tabs>
   <tab id="0" open="false" readOnly="false">
     <specification>
       <test-table version="1.0">
         <variables>
           <variable io="input" name="A" data-type="INT"></variable>
           <variable io="input" name="B" data-type="BOOLEAN"></variable>
           <variable io="output" name="C" data-type="INT"></variable>
           <constraint name="p" data-type="INT" constraint="[-5,5]"></constraint>
         </variables>
         <steps>
           <step duration="[5,-]"><!-- Hier ist die Reihenfolge der Cells wichtig! -->
             <cell>5</cell>
             <cell>FALSE</cell>
             <cell>A+2</cell>
           </step>
           <step duration="[1,1]">
             <cell>C[-1]</cell>
             <cell>!B[-1]</cell>
             <cell>A</cell>
           </step>
         </steps>
       </test-table>

       <additional-info>
         <constraintVariables>
           <constraintVariable name="p">
             <defaultValue>2</defaultValue>
           </constraintVariable>
         </constraintVariables>
         <ioVariables>
           <variableIdentifier name="A">
             <annotation>If we support annotations, this is where they would go</annotation>
           </variableIdentifier>
         </ioVariables>
       </additional-info>

       <display-info>
         <ioVariables>
           <variableIdentifier name="B">
             <colWidth>30</colWidth>
             <comment>Some column comment!</comment>
           </variableIdentifier>
           <variableIdentifier name="C">
             <comment>Another column comment!</comment>
           </variableIdentifier>
         </ioVariables>
         <rows>
           <row id="3">
             <comment>I am a row comment!</comment>
           </row>
         </rows>
         <table>
           <comment>I am a table comment!</comment>
         </table>
       </display-info>
     </specification>
   </tab>
   <tab id="1" open="true" readOnly="true">
     <specificationInstance>
       <test-table version="1.0">
         <variables>
           <variable io="input" name="A" data-type="INT"></variable>
           <variable io="input" name="B" data-type="BOOLEAN"></variable>
           <variable io="output" name="C" data-type="INT"></variable>
           <constraint name="p" data-type="INT" constraint="[-5,5]"></constraint>
         </variables>
         <steps>
           <step duration="4">
             <cell>5</cell>
             <cell>FALSE</cell>
             <cell>7</cell>
           </step>
           <step duration="1">
             <cell>7</cell>
             <cell>TRUE</cell>
             <cell>7</cell>
           </step>
         </steps>
       </test-table>
       <display-info>
         <ioVariables>
           <variableIdentifier name="B">
             <colWidth>30</colWidth>
             <comment>Some column comment!</comment>
           </variableIdentifier>
           <variableIdentifier name="C">
             <comment>Another column comment!</comment>
           </variableIdentifier>
         </ioVariables>
         <rows>
           <row id="3">
             <comment>I am a row comment!</comment>
           </row>
         </rows>
         <table>
           <comment>I am a table comment!</comment>
         </table>
       </display-info>
     </specificationInstance>
   </tab>
 </tabs>
 <config>
   <general>
     <uiLanguage>EN</uiLanguage>
     <windowSize>
       <width>800</width>
       <height>500</height>
     </windowSize>
   </general>
   <editor>
     <showLineNumbers>true</showLineNumbers>
   </editor>
 </config>
  <history>
    <code>/path/to/someCode.st</code>
    <spec>/path/to/someSpec.xml</spec>
    <spec>/path/to/anotherSpec.xml</spec>
  </history>
</session>
