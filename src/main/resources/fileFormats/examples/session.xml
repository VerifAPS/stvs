<?xml version="1.0" standalone="no"?>

<session xmlns="http://formal.iti.kit.edu/stvs/logic/io/xml"
         xmlns:ns2="http://formal.iti.kit.edu/exteta-1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://formal.iti.kit.edu/stvs/logic/io/xml ../session.xsd">
 <code>
   <plaintext>I am some ST code!</plaintext>
 </code>
 <tabs>
   <tab id="0" open="false" readOnly="false">
     <specification isConcrete="false" comment="I am a table comment!">
       <variables>
         <ioVariable io="input" name="A" data-type="INT" colwidth="10"></ioVariable>
         <ioVariable io="input" name="B" data-type="BOOL"
                     comment="I am a column comment!"></ioVariable>
         <ioVariable io="output" name="C" data-type="INT"></ioVariable>
         <ioVariable io="output" name="D" data-type="enumD" colwidth="50"
                     comment="I am another column comment!"></ioVariable>
         <freeVariable name="p" data-type="INT" default="3"></freeVariable>
       </variables>
       <rows>
         <row duration="[5,-]"><!-- Hier ist die Reihenfolge der Cells wichtig! -->
           <cell comment="I am a cell comment!">5</cell>
           <cell>FALSE</cell>
           <cell>A+2</cell>
           <cell comment="I am another cell comment!">literalOne</cell>
         </row>
         <row duration="[1,1]" comment="I am a row comment!">
           <cell>C[-1]</cell>
           <cell>!B[-1]</cell>
           <cell>A</cell>
           <cell>literalTwo</cell>
         </row>
       </rows>
       <enumTypes>
         <enum name="enumD">
           <literal>literalOne</literal>
           <literal>literalTwo</literal>
         </enum>
       </enumTypes>
     </specification>
   </tab>
   <tab id="1" open="true" readOnly="true">
    <specification isConcrete="true">
      <variables>
        <ioVariable io="input" name="A" data-type="INT" colwidth="10"></ioVariable>
        <ioVariable io="input" name="B" data-type="BOOL"
                    comment="I am a column comment!"></ioVariable>
        <ioVariable io="output" name    ="C" data-type="INT"></ioVariable>
        <ioVariable io="output" name="D" data-type="enumD" colwidth="50"
                    comment="I am another column comment!"></ioVariable>
        <freeVariable name="p" data-type="INT" default="3"></freeVariable>
      </variables>
      <rows>
        <row duration="2">
          <cycle>
            <cell>1</cell>
            <cell>FALSE</cell>
            <cell>3</cell>
            <cell>literalOne</cell>
          </cycle>
          <cycle>
            <cell>4</cell>
            <cell>FALSE</cell>
            <cell>8</cell>
            <cell>literalTwo</cell>
          </cycle>
        </row>
        <row duration="1" comment="I am a row comment!">
          <cycle>
            <cell>3</cell>
            <cell>TRUE</cell>
            <cell>1</cell>
            <cell>literalTwo</cell>
          </cycle>
        </row>
      </rows>
      <enumTypes>
        <enum name="enumD">
          <literal>literalOne</literal>
          <literal>literalTwo</literal>
        </enum>
      </enumTypes>
    </specification>
   </tab>
 </tabs>
 <config>
  <general>
    <uiLanguage>EN</uiLanguage>
    <windowSize>
      <width>800</width>
      <height>500</height>
    </windowSize>
    <verificationTimeout>100</verificationTimeout>
    <simulationTimeout>100</simulationTimeout>
  </general>
  <editor>
    <showLineNumbers>true</showLineNumbers>
    <fontFamily>Comic Sans</fontFamily>
    <fontSize>12</fontSize>
  </editor>
 </config>
  <history>
    <code>/path/to/someCode.st</code>
    <spec>/path/to/someSpec.xml</spec>
    <spec>/path/to/anotherSpec.xml</spec>
  </history>
</session>
