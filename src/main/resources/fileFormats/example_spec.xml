<?xml version="1.0"?>

<specification xmlns="http://formal.iti.kit.edu/stvs/logic/io/xml"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://formal.iti.kit.edu/stvs/logic/io/xml specification.xsd">
    <test-table version="1.0">
        <variables>
            <variable io="input" name="A" data-type="INT"></variable>
            <variable io="input" name="B" data-type="BOOLEAN"></variable>
            <variable io="output" name="C" data-type="INT"></variable>
            <variable io="output" name="D" data-type="ENUM"></variable>
            <constraint name="p" data-type="INT" constraint="[-5,5]"></constraint>
        </variables>
        <steps>
            <step duration="[5,-]"><!-- Hier ist die Reihenfolge der Cells wichtig! -->
                <cell>5</cell>
                <cell>FALSE</cell>
                <cell>A+2</cell>
                <!--cell>enumLiteral1</cell-->
            </step>
            <step duration="[1,1]">
                <cell>C[-1]</cell>
                <cell>!B[-1]</cell>
                <cell>A</cell>
                <cell>enumLiteral2</cell>
            </step>
        </steps>
    </test-table>

    <additional-info>
        <constraintVariables>
            <constraintVariable name="p">
                <defaultValue>2</defaultValue>
            </constraintVariable>
        </constraintVariables>
        <ioVariables>
            <variableIdentifier name="A">
                <annotation>I am a column annotation!</annotation>
                <comment>I am a column comment!</comment>
            </variableIdentifier>
            <variableIdentifier name="D">
                <enumType>enumD</enumType>
            </variableIdentifier>
        </ioVariables>
        <rows>
            <row id="1">
                <comment>I am a row comment!</comment>
                <variableIdentifier name="A">
                    <comment>I am a cell comment!</comment>
                    <annotation>I am a cell annotation!</annotation>
                </variableIdentifier>
            </row>
        </rows>
        <table>
            <comment>I am a table comment!</comment>
        </table>
        <enums>
            <enum name="enumD">
                <literal>literalOne</literal>
                <literal>literalTwo</literal>
            </enum>
        </enums>
    </additional-info>

    <display-info>
        <ioVariables>
            <variableIdentifier name="B">
                <colWidth>30</colWidth>
            </variableIdentifier>
            <variableIdentifier name="C">
                <colWidth>40</colWidth>
            </variableIdentifier>
        </ioVariables>
    </display-info>

</specification>
