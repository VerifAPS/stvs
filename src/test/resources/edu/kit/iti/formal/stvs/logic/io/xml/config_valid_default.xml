<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://formal.iti.kit.edu/stvs/logic/io/xml">
    <general>
        <uiLanguage>EN</uiLanguage>
        <windowSize>
            <width>800</width>
            <height>600</height>
            <maximized>true</maximized>
        </windowSize>
        <verificationTimeout>3600</verificationTimeout>
        <simulationTimeout>60</simulationTimeout>
        <maxLineRollout>50</maxLineRollout>
    </general>
    <editor>
        <showLineNumbers>true</showLineNumbers>
        <fontFamily>Courier</fontFamily>
        <fontSize>12</fontSize>
    </editor>
    <dependencies>
        <z3Path>[Path to Z3 Executable]</z3Path>
        <getetaCommand>java -jar /path/to/geteta.jar -c ${code} -t ${spec} -x</getetaCommand>
        <nuxmvFilename>[Path to NuXmv Executable]</nuxmvFilename>
    </dependencies>
</config>
